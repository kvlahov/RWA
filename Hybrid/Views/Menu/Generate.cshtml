@{
    ViewBag.Title = "Generate";
}


<h2>Generate new menu</h2>
<div class="row">
    <div class="col-md-8">
        <form class="form-horizontal" action="">

            <div class="form-group">
                <label for="datepicker" class="col-sm-3 control-label">Pick a date</label>
                <div class="col-sm-9">
                    <div class="input-group date datepicker-inline" id="datepicker">
                        <input type="text" class="form-control" id="dateInput" />
                        <span class="input-group-addon" id="basic-addon1">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="noMeals" class="col-sm-3 control-label">Number of Meals</label>
                <div class="col-sm-9">
                    <select id="noMeals" class="form-control">
                        @for (int i = 1; i < 11; i++)
                        {
                            <option>@i</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="col-sm-3 control-label">Exclude</label>
                <div class="col-sm-9">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button"
                                id="dropdownMenu1" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="true">
                            <i class="glyphicon glyphicon-cog"></i>
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu checkbox-menu allow-focus" aria-labelledby="dropdownMenu1">

                            <li>
                                <label>
                                    <input type="checkbox"> Ingredient 1
                                </label>
                            </li>

                            <li>
                                <label>
                                    <input type="checkbox"> Ingredient 2
                                </label>
                            </li>

                            <li>
                                <label>
                                    <input type="checkbox"> Ingredient 3
                                </label>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>

            @*<div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Generate" class="btn btn-success" />
                    </div>
                </div>*@
            <div class="form-group">
                <div class="col-sm-offset-3 col-md-9">
                    <button class="btn btn-primary" id="btnGenerate">Generate</button>
                    <button class="btn btn-success" style="display:none" id="btnSave">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="lds-hourglass col-sm-offset-2" id="loading"></div>

<div id="meals">
</div>

@section scripts {
    <script>
        $(document).ajaxStart(function () {
            $("#loading").show();
        });

        $(document).ajaxStop(function () {
            $("#loading").hide();
        });

        $('#loading').hide();
        $('#datepicker').datepicker({
            format: "dd/mm/yyyy",
            autoclose: true,
            startDate: new Date()
        });


        $(".checkbox-menu").on("change", "input[type='checkbox']", function () {
            $(this).closest("li").toggleClass("active", this.checked);
        });

        $(document).on('click', '.allow-focus', function (e) {
            e.stopPropagation();
        });


        $('#dateInput').css({
            width: $('#noMeals').css('width')
        });

        $('#btnGenerate').click((e) => {
            e.preventDefault();
            $('#meals').hide();
            $('#btnSave').fadeOut(200);
            $.ajax({
                    url: '@Url.Action("GenerateMeals")',
                    method: 'GET',
                    cache: false,
                    dataType: 'html',
                    data: { noOfMeals: $('#noMeals').val()},
                    success: function (partialView) {
                        $("#meals").html(partialView).fadeIn(800);
                        $('#btnSave').fadeIn(100);
                    }
            })

        });
    </script>
}
