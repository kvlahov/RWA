@using Hybrid.Models
@model List<String>
@{
    ViewBag.Title = "Generate";
}


<h2>Generate new menu</h2>
<div class="row">
    <div class="col-md-8">
        <form class="form-horizontal" action="/">

            <div class="form-group">
                <label for="noMeals" class="col-sm-3 control-label">Pick a date</label>
                <div class="col-sm-9">
                    @*<input id="datepicker" width="270" />*@
                    <div class="input-group date datepicker-inline" id="datepicker">
                        <input type="text" class="form-control" id="dateInput" />
                        <span class="input-group-addon" id="basic-addon1">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="noMeals" class="col-sm-3 control-label">Number of Meals</label>
                <div class="col-sm-9">
                    <select id="noMeals" class="form-control">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="col-sm-3 control-label">Exclude</label>
                <div class="col-sm-9">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button"
                                id="dropdownMenu1" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="true">
                            <i class="glyphicon glyphicon-cog"></i>
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu checkbox-menu allow-focus" aria-labelledby="dropdownMenu1">

                            <li>
                                <label>
                                    <input type="checkbox"> Meal 1
                                </label>
                            </li>

                            <li>
                                <label>
                                    <input type="checkbox"> Meal 2
                                </label>
                            </li>

                            <li>
                                <label>
                                    <input type="checkbox"> Meal 3
                                </label>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="Generate" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

@foreach (var meal in Model)
{
    <p>@meal</p>
}


@section scripts {
    <script>
        $('#datepicker').datepicker({
            format: "dd/mm/yyyy",
            autoclose: true,
            startDate: new Date()
        });


        $(".checkbox-menu").on("change", "input[type='checkbox']", function () {
            $(this).closest("li").toggleClass("active", this.checked);
        });

        $(document).on('click', '.allow-focus', function (e) {
            e.stopPropagation();
        });


        $('#dateInput').css({
            width: $('#noMeals').css('width')
        });
    </script>
}
